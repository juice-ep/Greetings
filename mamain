    <script>
        // Global variables
        let deviceRole = null;
        let peerConnection = null;
        let localStream = null;
        let remoteStream = null;
        let isStreaming = false;
        let audioContext = null;
        let testToneOscillator = null;
        let connectedClients = 0;
        let latencyStartTime = 0;

        // WebRTC Configuration
        const rtcConfig = {
            iceServers: [
                { urls: 'stun:stun.l.google.com:19302' },
                { urls: 'stun:stun1.l.google.com:19302' }
            ]
        };

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            initializeApp();
            setupEventListeners();
            detectLocalIP();
        });

        function initializeApp() {
            // Setup tab switching
            document.querySelectorAll('.tab').forEach(tab => {
                tab.addEventListener('click', () => switchTab(tab.dataset.tab));
            });

            // Setup device role selection
            document.querySelectorAll('.role-card').forEach(card => {
                card.addEventListener('click', () => selectDeviceRole(card.dataset.role));
            });

            // Setup volume control
            const volumeSlider = document.getElementById('volumeSlider');
            volumeSlider.addEventListener('input', (e) => {
                const volume = e.target.value;
                document.getElementById('volumeValue').textContent = volume + '%';
                if (remoteStream) {
                    const audioElement = document.getElementById('remoteAudio');
                    audioElement.volume = volume / 100;
                }
            });
        }

        function setupEventListeners() {
            // Handle WebRTC connection events
            window.addEventListener('beforeunload', () => {
                if (peerConnection) {
                    peerConnection.close();
                }
                if (localStream) {
                    localStream.getTracks().forEach(track => track.stop());
                }
            });
        }

        function switchTab(tabName) {
            // Update tab appearance
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.toggle('active', tab.dataset.tab === tabName);
            });

            // Show/hide content
            document.querySelectorAll('.content').forEach(content => {
                content.classList.toggle('active', content.id === tabName);
            });
        }

        function selectDeviceRole(role) {
            deviceRole = role;
            
            // Update UI
            document.querySelectorAll('.role-card').forEach(card => {
                card.classList.toggle('selected', card.dataset.role === role);
            });

            // Update status and enable controls
            const status = document.getElementById('setupStatus');
            if (role === 'tv') {
                status.textContent = 'üì∫ TV mode selected - Ready to capture and stream audio';
                status.className = 'status connected';
                document.getElementById('startStreamBtn').disabled = false;
                document.getElementById('captureAudioBtn').disabled = false;
            } else {
                status.textContent = 'üì± Receiver mode selected - Ready to connect to TV stream';
                status.className = 'status ready';
                document.getElementById('connectBtn').disabled = false;
            }

            // Show connection info
            document.getElementById('connectionInfo').style.display = 'block';
            updateConnectionURL();
        }

        async function detectLocalIP() {
            try {
                // Create a temporary peer connection to get local IP
                const tempPC = new RTCPeerConnection(rtcConfig);
                tempPC.createDataChannel('');
                
                const offer = await tempPC.createOffer();
                await tempPC.setLocalDescription(offer);
                
                tempPC.onicecandidate = (event) => {
                    if (event.candidate) {
                        const candidate = event.candidate.candidate;
                        const ipMatch = candidate.match(/([0-9]{1,3}\.){3}[0-9]{1,3}/);
                        if (ipMatch) {
                            const localIP = ipMatch[0];
                            document.getElementById('localIP').textContent = localIP;
                            updateConnectionURL();
                            tempPC.close();
                        }
                    }
                };
            } catch (error) {
                console.error('Error detecting local IP:', error);
                document.getElementById('localIP').textContent = 'Unable to detect';
            }
        }

        function updateConnectionURL() {
            const localIP = document.getElementById('localIP').textContent;
            if (localIP && localIP !== 'Detecting...' && localIP !== 'Unable to detect') {
                const url = `http://${localIP}:${window.location.port || '80'}${window.location.pathname}`;
                document.getElementById('connectionURL').textContent = url;
            }
        }

        async function startAudioCapture() {
            try {
                const constraints = {
                    audio: {
                        echoCancellation: false,
                        noiseSuppression: false,
                        autoGainControl: false,
                        sampleRate: 48000,
                        sampleSize: 16,
                        channelCount: 2
                    }
                };

                localStream = await navigator.mediaDevices.getUserMedia(constraints);
                
                const status = document.getElementById('streamingStatus');
                status.textContent = 'üé§ Audio capture active - Ready to stream';
                status.className = 'status connected';
                
                document.getElementById('startStreamBtn').disabled = false;
                document.getElementById('captureAudioBtn').textContent = '‚úÖ Audio Captured';
                document.getElementById('captureAudioBtn').disabled = true;

            } catch (error) {
                console.error('Error capturing audio:', error);
                updateStatus('streamingStatus', 'error', '‚ùå Failed to capture audio: ' + error.message);
            }
        }

        async function startStreaming() {
            if (!localStream) {
                alert('Please capture audio first');
                return;
            }

            try {
                peerConnection = new RTCPeerConnection(rtcConfig);
                
                // Add local stream to peer connection
                localStream.getTracks().forEach(track => {
                    peerConnection.addTrack(track, localStream);
                });

                // Handle incoming connections
                peerConnection.onicecandidate = handleICECandidate;
                peerConnection.onconnectionstatechange = handleConnectionStateChange;

                // Create offer for incoming connections
                const offer = await peerConnection.createOffer();
                await peerConnection.setLocalDescription(offer);

                isStreaming = true;
                updateStatus('streamingStatus', 'connected', 'üì° Streaming active - Clients can connect');
                
                document.getElementById('startStreamBtn').disabled = true;
                document.getElementById('stopStreamBtn').disabled = false;
                
                // Start metrics updates
                startMetricsUpdate();

            } catch (error) {
                console.error('Error starting stream:', error);
                updateStatus('streamingStatus', 'error', '‚ùå Failed to start streaming: ' + error.message);
            }
        }

        async function connectToStream() {
            try {
                peerConnection = new RTCPeerConnection(rtcConfig);
                
                // Handle incoming stream
                peerConnection.ontrack = (event) => {
                    remoteStream = event.streams[0];
                    const audioElement = document.getElementById('remoteAudio');
                    audioElement.srcObject = remoteStream;
                    audioElement.style.display = 'block';
                    audioElement.play();
                    
                    updateStatus('streamingStatus', 'connected', 'üéµ Connected - Receiving audio stream');
                };

                peerConnection.onicecandidate = handleICECandidate;
                peerConnection.onconnectionstatechange = handleConnectionStateChange;

                updateStatus('streamingStatus', 'connecting', 'üîó Connecting to audio stream...');
                
                // In a real implementation, this would connect to the actual streaming device
                // For MVP demo purposes, we'll simulate the connection
                setTimeout(() => {
                    updateStatus('streamingStatus', 'connected', '‚úÖ Simulated connection established');
                    document.getElementById('connectionMetric').textContent = 'Connected';
                }, 2000);

            } catch (error) {
                console.error('Error connecting to stream:', error);
                updateStatus('streamingStatus', 'error', '‚ùå Failed to connect: ' + error.message);
            }
        }

        function stopStreaming() {
            if (peerConnection) {
                peerConnection.close();
                peerConnection = null;
            }
            
            if (localStream) {
                localStream.getTracks().forEach(track => track.stop());
                localStream = null;
            }

            isStreaming = false;
            connectedClients = 0;
            
            updateStatus('streamingStatus', 'ready', 'Streaming stopped');
            document.getElementById('startStreamBtn').disabled = false;
            document.getElementById('stopStreamBtn').disabled = true;
            document.getElementById('captureAudioBtn').disabled = false;
            document.getElementById('captureAudioBtn').textContent = 'üé§ Capture Audio';
            
            // Reset metrics
            document.getElementById('connectionMetric').textContent = 'Disconnected';
            document.getElementById('clientsMetric').textContent = '0';
        }

        function playTestTone() {
            if (!audioContext) {
                audioContext = new (window.AudioContext || window.webkitAudioContext)();
            }

            if (testToneOscillator) {
                testToneOscillator.stop();
            }

            testToneOscillator = audioContext.createOscillator();
            const gainNode = audioContext.createGain();
            
            testToneOscillator.type = 'sine';
            testToneOscillator.frequency.setValueAtTime(440, audioContext.currentTime); // A note
            gainNode.gain.setValueAtTime(0.1, audioContext.currentTime);
            
            testToneOscillator.connect(gainNode);
            gainNode.connect(audioContext.destination);
            
            testToneOscillator.start();
            testToneOscillator.stop(audioContext.currentTime + 1); // Play for 1 second
            
            document.getElementById('testToneBtn').textContent = 'üîä Playing...';
            setTimeout(() => {
                document.getElementById('testToneBtn').textContent = 'üîä Test Tone';
            }, 1000);
        }

        // Test functions
        async function testLatency() {
            latencyStartTime = performance.now();
            updateTestResults('üîÑ Testing audio latency...');
            
            // Simulate latency test
            setTimeout(() => {
                const latency = Math.random() * 100 + 30; // 30-130ms
                document.getElementById('latencyMetric').textContent = Math.round(latency) + 'ms';
                updateTestResults(`‚úÖ Latency test completed: ${Math.round(latency)}ms`);
            }, 2000);
        }

        async function testQuality() {
            updateTestResults('üîÑ Testing audio quality...');
            
            // Simulate quality test
            setTimeout(() => {
                const quality = Math.random() * 200 + 128; // 128-328kbps
                document.getElementById('qualityMetric').textContent = Math.round(quality) + 'kbps';
                updateTestResults(`‚úÖ Quality test completed: ${Math.round(quality)}kbps`);
            }, 3000);
        }

        async function testStability() {
            updateTestResults('üîÑ Testing connection stability...');
            
            // Simulate stability test
            let testCount = 0;
            const testInterval = setInterval(() => {
                testCount++;
                if (testCount < 5) {
                    updateTestResults(`üîÑ Stability test ${testCount}/5...`);
                } else {
                    clearInterval(testInterval);
                    updateTestResults(`‚úÖ Stability test completed: 5/5 tests passed`);
                }
            }, 1000);
        }

        // Helper functions
        function handleICECandidate(event) {
            if (event.candidate) {
                // In a real implementation, send candidate to remote peer
                console.log('ICE candidate:', event.candidate);
            }
        }

        function handleConnectionStateChange() {
            const state = peerConnection.connectionState;
            console.log('Connection state:', state);
            
            if (state === 'connected') {
                connectedClients = 1;
                document.getElementById('clientsMetric').textContent = connectedClients.toString();
                document.getElementById('connectionMetric').textContent = 'Connected';
            } else if (state === 'disconnected' || state === 'failed') {
                connectedClients = 0;
                document.getElementById('clientsMetric').textContent = '0';
                document.getElementById('connectionMetric').textContent = 'Disconnected';
            }
        }

        function updateStatus(elementId, type, message) {
            const element = document.getElementById(elementId);
            element.textContent = message;
            element.className = `status ${type}`;
        }

        function updateTestResults(message) {
            document.getElementById('testResults').innerHTML = `<p>${message}</p>`;
        }

        function startMetricsUpdate() {
            setInterval(() => {
                if (isStreaming && peerConnection) {
                    // Update metrics (simulated for MVP)
                    const latency = Math.random() * 20 + 30; // 30-50ms
                    const quality = Math.random() * 50 + 200; // 200-250kbps
                    
                    document.getElementById('latencyMetric').textContent = Math.round(latency) + 'ms';
                    document.getElementById('qualityMetric').textContent = Math.round(quality) + 'kbps';
                }
            }, 5000);
        }
    </script>
</body>
</html>
